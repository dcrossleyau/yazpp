SHELL=/bin/sh

CC=@CC@
CXX=@CXX@
CPP=@CPP@
CXXCPP=@CXXCPP@
RANLIB=@RANLIB@
CDEFS=@DEFS@
LIBS=@LIBS@

YAZLIB=@YAZLIB@ 
INCLUDE=-I../include @YAZINC@
DEFS=$(INCLUDE) $(CDEFS)
PROG1=yaz-clientx
PROGO1=yaz-client.o
PROG2=yaz-server
PROGO2=yaz-server.o
PROG3=yaz-proxy
PROGO3=yaz-proxy-main.o
LIB=libyaz++.lib
PO=yaz-socket-manager.o yaz-pdu-assoc.o yaz-z-assoc.o yaz-proxy.o \
	yaz-z-query.o yaz-ir-assoc.o

.SUFFIXES: .cpp

all: $(PROG1) $(PROG2) $(PROG3)

$(LIB): $(PO)
	rm -f $(LIB)
	ar qc $(LIB) $(PO)
	$(RANLIB) $(LIB)

$(PROG1): $(PROGO1) $(LIB)
	$(CXX) $(CXXFLAGS) -o $(PROG1) $(PROGO1) $(LIB) $(YAZLIB) $(LIBS) 

$(PROG2): $(PROGO2) $(LIB)
	$(CXX) $(CXXFLAGS) -o $(PROG2) $(PROGO2) $(LIB) $(YAZLIB) $(LIBS) 

$(PROG3): $(PROGO3) $(LIB)
	$(CXX) $(CXXFLAGS) -o $(PROG3) $(PROGO3) $(LIB) $(YAZLIB) $(LIBS) 

alll:

.cpp.o:
	$(CXX) -c $(DEFS) $(CXXFLAGS) $<

.c.o:
	$(CC) -c $(DEFS) $(FLAGS) $<

clean:
	rm -f *.[oa] test core mon.out gmon.out errlist
	rm -f $(PROG1) $(PROG2) $(PROG3) $(LIB)

depend:
	sed '/^#Depend/q' <Makefile >Makefile.tmp
	$(CXXCPP) $(DEFS) -M *.cpp >>Makefile.tmp
	mv -f Makefile.tmp Makefile

